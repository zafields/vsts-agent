<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <OutputType>Exe</OutputType>
    <RuntimeIdentifiers>win7-x64;osx.10.11-x64;linux-x64</RuntimeIdentifiers>
    <PackageTargetFallback>portable-net451+win8</PackageTargetFallback>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Microsoft.VisualStudio.Services.Agent\Microsoft.VisualStudio.Services.Agent.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Win32.Registry" Version="4.5.0-preview2-25319-04" />
    <PackageReference Include="vss-api-netcore" Version="0.5.45-private" />
    <PackageReference Include="System.ServiceProcess.ServiceController" Version="4.5.0-preview2-25319-04" />
    <PackageReference Include="System.IO.Compression.ZipFile" Version="4.4.0-beta-24913-02" />
    <PackageReference Include="System.IO.FileSystem.AccessControl" Version="4.5.0-preview2-25319-04" />
    <PackageReference Include="Newtonsoft.Json" Version="9.0.1" />
    <PackageReference Include="System.Diagnostics.TraceSource" Version="4.4.0-beta-24913-02" />
    <PackageReference Include="System.Security.AccessControl" Version="4.5.0-preview2-25319-04" />
    <PackageReference Include="System.Runtime.InteropServices" Version="4.4.0-beta-24913-02" />
    <PackageReference Include="System.Security.Cryptography.Cng" Version="4.5.0-preview2-25319-04" />
    <PackageReference Include="System.Security.Cryptography.ProtectedData" Version="4.5.0-preview2-25319-04" />
    <PackageReference Include="System.Runtime.Loader" Version="4.4.0-beta-24913-02" />
    <PackageReference Include="YamlDotNet" Version="4.1.0" />
  </ItemGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Debug' ">
    <DefineConstants>$(OSConstant);TRACE;DEBUG;</DefineConstants>
    <DebugType>portable</DebugType>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
    <DefineConstants>$(OSConstant);TRACE;</DefineConstants>
  </PropertyGroup>
</Project>
